{
     "name": "metalbox",
  "version": "1.15.3",
  "license": "ISC",

  "author": "StrangeTransistor <strange.transistor@gmail.com>",
  "description": "set of components for building/releasing stuff",

  "homepage":            "https://github.com/StrangeTransistor/metalbox",
  "repository": { "url": "https://github.com/StrangeTransistor/metalbox.git", "type": "git" },
  "bugs":       { "url": "https://github.com/StrangeTransistor/metalbox/issues" },

  "engines":
  {
    "node": ">=7"
  },

  "metalbox":
  {
    "presets":
    {
      "frontend":
      [
        "Frontend",
        {
          "src": "test/_/release-src/frontend"
        }
      ],
      "frontend-dev":
      [
        "Frontend/Dev",
        {
          "src": "test/_/release-src/frontend"
        }
      ],
      "backend":
      [
        "Backend",
        {
          "src": "test/_/release-src/backend"
        }
      ],
      "backend-dev":
      [
        "Backend/Dev",
        {
          "src": "test/_/release-src/backend"
        }
      ],
      "library":
      [
        "Library",
        {
          "src": "test/_/release-src/library"
        }
      ],
      "library-dev":
      [
        "Library/Dev",
        {
          "src": "test/_/release-src/library"
        }
      ],
      "library-node":
      [
        "Library",
        {
          "src": "test/_/release-src/library",
          "options":
          {
            "targets": "node-only"
          }
        }
      ],
      "frontend-template":
      [
        "template/Frontend"
      ],
      "ts":
      [
        "Ts/Ts",
        {
          "src": "test/_/release-src/ts"
        }
      ],
      "ts-lib":
      [
        "Library",
        {
          "src": "test/_/release-src/ts",
          "options": { "targets": "node-first" }
        }
      ],
      "ts-lib-dev":
      [
        "Library/Dev",
        {
          "src": "test/_/release-src/ts",
          "options": { "targets": "node-first" }
        }
      ]
    }
  },

  "bin": "run/metalbox",

  "files":
  [
    "flow-typed/",
    "run/",
    "src/",
    "templates/"
  ],

  "scripts":
  {
    "flow-typed":
      "flow-typed install",

    "st":
      "eslint src/ test/",

    "flow":
      "flow check",

    "mocha":
                      "mocha    --recursive test/artifact/ test/producer/ test/release/ test/runner/",
    "cover":
      "istanbul cover _mocha -- --recursive test/artifact/ test/producer/ test/release/ test/runner/",

    "test":
      "npm run st && npm run flow && npm run mocha",

    "infer":
      "flow type-at-pos",

    "suggest":
      "flow suggest",

    "serve":
      "sleep 60s"
  },

  "dependencies":
  {
    "mkdirp":
      "0.5",

    "fs-sync":
      "1",

    "rootpath":
      "StreetStrider/rootpath#v1.8.1",

    "command-promise":
      "2",

    "find-root":
      "1",

    "yargs":
      "6.6",

    "bluebird":
      "3",

    "globule":
      "1",

    "globjoin":
      "0.1",

    "chokidar":
      "1",

    "anymatch":
      "1",

    "mime":
      "1.3",

    "tree-kill":
      "1",

    "debounce":
      "1",

    "is-empty":
      "1",

    "indent-string":
      "3",

    "randomstring":
      "1",

    "lodash":
      "4",


    "pug":
      "2.0.0-beta.12",

    "require-nocache":
      "1",


    "less":
      "2.7",

    "postcss":
      "5",

    "autoprefixer":
      "6",

    "cssnano":
      "3.4",


    "rollup":
      "0.49",

    "rollup-plugin-includepaths":
      "0.2",

    "rollup-plugin-node-globals":
      "1",

    "rollup-plugin-node-builtins":
      "2",

    "rollup-plugin-node-resolve":
      "3",

    "rollup-plugin-commonjs":
      "8.2",

    "rollup-plugin-json":
      "2",

    "rollup-plugin-flow":
      "1",

    "rollup-plugin-typescript":
      "0.8",

    "rollup-plugin-pug":
      "0.1.6",


    "babel-core":
      "^6.19",

    "babel-preset-babili":
      "0.0.12",

    "babel-preset-env":
      "1.5.1",


    "typescript":
      "2",


    "node-notifier":
      "4",

    "cli-color":
      "1"
  },

  "devDependencies":
  {
    "eslint":
      "3",

    "js-outlander":
      "StrangeTransistor/js-outlander#2.1.1",

    "flow-bin":
      "0.53",

    "flow-typed":
      "2",

    "mocha":
      "3",

    "chai":
      "3",

    "istanbul":
      "0.4",

    "dir-compare":
      "1.3",

    "es6y-throttle":
      "=1.0.1"
  }
}
