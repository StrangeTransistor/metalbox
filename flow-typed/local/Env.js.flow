
import T_Rootpath from 'rootpath';

export type EnvOut =
{
	dst: T_Rootpath
};

export type EnvIn =
{
	src: T_Rootpath
};

export type EnvInOut = EnvIn & EnvOut;

export type EnvEntry =
{
	entry: string
};

export type EnvEntryEvent = EnvEntry &
{
	event: 'add' | 'change' | 'unlink'
};

export type EnvRelease = EnvInOut;

export type EnvPackage =
{
	package:
	{
		name: string,
		version: string,
		scripts?: Object
	}
};

export type EnvInstance =
{
	instance: string
};

export type EnvInstanceOptional =
{
	instance?: string
};

export type EnvOnce =
{
	once?: boolean
};

export type EnvFrontend
= EnvRelease
& EnvPackage
&
{
	dev?: boolean,
	buckets_path?: string,
	hash?: string,
};

export type EnvBackend = EnvRelease & EnvPackage;

export type EnvNotify =
{
	notifier: T_ReleaseNotify
};


import type { T_Printer } from '../src/printer';

export type EnvPrinter =
{
	printer: T_Printer
};
